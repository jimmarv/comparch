	ob_start();
	session_start();
	
	$destination = "";
	$source1     = "";
	$source2     = "";
	
	$id			= isset($_POST['id'])  ?  htmlentities($_POST['id'])  : "";
	$type		= isset($_POST['type'])  ?  htmlentities($_POST['type'])  : "";
	
	
		$destination	.= '<select class="form-control" name="rd1" id="rd1">';
		$source1	.= '<select class="form-control" name="rs1" id="rs1">';
		$source2	.= '<select class="form-control" name="rt1" id="rt1">';
		$sql = "SELECT id,addressname, address , defaultvalue ,updatedvalue FROM register WHERE id NOT IN ('33','34')";
					$result = $conn->query($sql);
					if ($result->num_rows > 0) {
						 // output data of each row
						 while($row = $result->fetch_assoc()) {
							 $destination .= '<option value ="'.$row['address'].'">'.$row['addressname'].'</option>';
							 $source1 .= '<option value ="'.$row['address'].'">'.$row['addressname'].'</option>';
							 $source2 .= '<option value ="'.$row['address'].'">'.$row['addressname'].'</option>';
						 }
					} else {
						     $destination .= '<option>- No Records Found -</option>';
							 $source1 .= '<option>- No Records Found -</option>';
